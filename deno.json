{
	"lint": {
		"include": ["."],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["."],
		"exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
	}
}
